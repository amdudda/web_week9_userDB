extends layout

block content
	h1= title
	p Welcome to our test

	// WRAPPER
	#wrapper
		
		//USER INFO
		// I prefer JADE notation to piped HTML, so I'm using that instead of what the sample code shows.
		#userInfo
			h2 User Info
			p
				strong Name: &#32;
					span#userInfoName
				br
				strong Age: &#32;
					span#userInfoName
				br
				strong Gender: &#32;
					span#userInfoGender
				br
				strong Location: &#32;
					span#userInfoLocation
		// end USER INFO

		// USER LIST
		h2 User List
		#userList
			table
				thead
					th username
					th email
					th Delete?
				tbody
		// end USER LIST

		// ADD USER
		h2 Add User
		#addUser
			fieldset
				input#inputUserName(type="text",placeholder="Username")
				input#inputUserEmail(type="text",placeholder="Email")
				br
				input#inputUserFullName(type="text",placeholder="Full Name")
				input#inputUserAge(type="text",placeholder="Age")
				br
				input#inputUserLocation(type="text",placeholder="Location")
				input#inputUserGender(type="text",placeholder="Gender")
				br
				button#btnAddUser Add User
		// end ADD USER

	// end WRAPPER